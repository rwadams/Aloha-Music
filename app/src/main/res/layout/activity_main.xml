<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rwadams.alohamusic.MainActivity">

    <ImageView
        android:id="@+id/imgUkulele"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ukulele"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="52dp" />

    <Button
        android:id="@+id/btnUkulele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgUkulele"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/btnUkulele"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imgDrums"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/imgUkulele"
        android:layout_alignStart="@+id/imgUkulele"
        android:layout_below="@+id/btnUkulele"
        android:layout_marginTop="20dp"
        android:src="@drawable/drums"
        app:srcCompat="@drawable/drums" />

    <Button
        android:id="@+id/btnDrums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgDrums"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/btnDrums"
        android:textSize="22sp" />
</RelativeLayout>
